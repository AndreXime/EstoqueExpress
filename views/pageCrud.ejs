                    alertElement.textContent = result.message;
                }else{
                    alertElement.classList.add('alert-success');
                    alertElement.classList.remove('alert-danger');
                    alertElement.textContent = result.message;
                }

            } catch (error) {
                alertElement.textContent = 'Algo deu errado. Tente novamente.';
            }
        });
        document.getElementById('userUpdate').addEventListener('submit', async (event) => {
            event.preventDefault();

            const alertElement = document.getElementById('alertUpdate');
            alertElement.classList.remove('d-none');
            try {
                const response = await fetch('/api/update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },

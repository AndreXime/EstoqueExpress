                if (!response.ok) {
                    alertElement.classList.add('alert-danger');
                    alertElement.classList.remove('alert-success');
                    alertElement.textContent = result.message;
                }else{
                    alertElement.classList.add('alert-success');
                    alertElement.classList.remove('alert-danger');
                    alertElement.textContent = result.message;
                }

            } catch (error) {
                alertElement.textContent = 'Algo deu errado. Tente novamente.';
            }
        });
        document.getElementById('userLogin').addEventListener('submit', async (event) => {
            event.preventDefault();
            
            const alertElement = document.getElementById('alertLogin');
            alertElement.classList.remove('d-none');
            try {
                const response = await fetch('/api/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: rawToObjToJson(event) // Envia os dados como JSON
                });

                //Alerta em baixo do formulario
                const result = await response.json();
                if (!response.ok) {
                    alertElement.classList.add('alert-danger');
                    alertElement.classList.remove('alert-success');
                    alertElement.textContent = result.message;
                }else{
                    alertElement.classList.add('alert-success');
                    alertElement.classList.remove('alert-danger');
                    alertElement.textContent = result.message;
                }

            } catch (error) {
                alertElement.textContent = 'Algo deu errado. Tente novamente.';
            }
        });
    </script>
    <script src="/js/bootstrap.bundle.js"></script>
</body>
</html>
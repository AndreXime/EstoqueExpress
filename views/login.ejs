<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acessar conta</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/icons/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/aparecer.css">
    <link rel="icon" type="image/png" href="/img/icon.png">
    <style>
      @media (max-width: 991.98px) {
      .largura { width: 100%;}
      }
      @media (min-width: 992px) {
      .larguradesktop{ width: 40%; }
      }
      html,body{
        height: 100%;
      }
    </style>
</head>
<body style="background-image: url(/img/dot.webp);" class="d-flex flex-column min-vh-100">
  
<%- include('partials/nav') %>

<main style="background-color: #faf9fa;" class="container larguradesktop largura p-5 my-4 flex-grow-1">
   <!-- Pills navs -->
  <ul style="cursor: pointer;background-color:#ffffff  ;" class="nav nav-pills nav-justified mb-5 text-white">
    <li class="nav-item">
      <a class="nav-link active border border-primary rounded-lg" id="tab-login">Login</a>
    </li>
    <li style="cursor: default; background-color: #faf9fa;" class="px-3"></li>
    <li class="nav-item">
      <a class="nav-link border border-primary rounded-lg" id="tab-register">Registrar</a>
    </li>
  </ul>
 
  <!-- Pills content -->
  <div class="tab-content">
    <div class="tab-pane show active" id="pills-login">
      <form action="/api/login" method="POST">

        <!-- Email input -->
        <div class="input-group mb-4">
          <span class="input-group-text" id="basic-addon1">
            <i class="bi bi-envelope"></i>
          </span>
          <div class="form-floating">
            <input type="email" class="form-control" id="loginName" name="email" placeholder="name@example.com" aria-label="Email" aria-describedby="basic-addon1">
            <label for="loginName">Email</label>
          </div>
        </div>
        
        <!-- Password input -->
        <div class="input-group mb-4">
          <span class="input-group-text" id="basic-addon2">
            <i class="bi bi-lock"></i>
          </span>
          <div class="form-floating">
            <input type="password" class="form-control" id="loginPassword" name="password" placeholder="Senha" aria-label="Senha" aria-describedby="basic-addon2">
            <label for="loginPassword">Senha</label>
          </div>
        </div>
  
        <!-- 2 column grid layout -->
        <div class="row mb-4">
          
          <div class="col-md d-flex justify-content-center">
            <!-- Simple link -->
            <a href="#!">Esqueceu a senha?</a>
          </div>
        </div>
  
        <!-- Submit button -->
        <div class="text-center mb-4">
          <button type="submit" class="btn btn-warning btn-lg rounded-pill shadow">
            <i class="bi bi-check-circle"></i> Fazer login
          </button>
        </div>
      </form>
    </div>
    
    <div class="tab-pane" id="pills-register">
      <form action="/api/register" method="POST">
        <!-- Name input -->
      <div class="input-group mb-4">
        <span class="input-group-text" id="basic-addon1">
          <i class="bi bi-person"></i>
        </span>
        <div class="form-floating">
          <input type="text" class="form-control" id="registerName" name="name" placeholder="Nome" aria-label="Nome" aria-describedby="basic-addon1">
          <label for="registerName">Nome da empresa</label>
        </div>
      </div>

      <!-- Email input -->
      <div class="input-group mb-4">
        <span class="input-group-text" id="basic-addon2">
          <i class="bi bi-envelope"></i>
        </span>
        <div class="form-floating">
          <input type="email" class="form-control" id="registerEmail" name="email" placeholder="Email" aria-label="Email" aria-describedby="basic-addon2">
          <label for="registerEmail">Email</label>
        </div>
      </div>

      <!-- Password input -->
      <div class="input-group mb-4">
        <span class="input-group-text" id="basic-addon3">
          <i class="bi bi-lock"></i>
        </span>
        <div class="form-floating">
          <input type="password" class="form-control" id="registerPassword" name="password" placeholder="Senha" aria-label="Senha" aria-describedby="basic-addon3">
          <label for="registerPassword">Senha</label>
        </div>
      </div>

      <!-- Repeat Password input -->
      <div class="input-group mb-4">
        <span class="input-group-text" id="basic-addon4">
          <i class="bi bi-lock"></i>
        </span>
        <div class="form-floating">
          <input type="password" class="form-control" id="registerRepeatPassword" name="password_confirmation" placeholder="Senha novamente" aria-label="Senha novamente" aria-describedby="basic-addon4">
          <label for="registerRepeatPassword">Senha novamente</label>
        </div>
      </div>
        
        <!-- Submit button -->
        <div class="text-center mb-4">
          <button type="submit" class="btn btn-warning btn-lg rounded-pill shadow">
            <i class="bi bi-check-circle"></i> Registrar
          </button>
        </div>
      </form>
    </div>
  </div>
          <% if (resultado.contaL) { %>
            <% resultado.contaL.forEach(function(conta) { %>
              <div id="popup" class="alert alert-danger mt-3 popup" role="alert">
                <%= conta %>
              </div>
          <% });} %>
          <% if (resultado.contaR) { %>
            <% resultado.contaR.forEach(function(conta) { %>
              <div id="popup" class="alert alert-danger mt-3 popup" role="alert">
                <%= conta %>
              </div>
          <% });} %>
          <% if (resultado.email) { %>
            <% resultado.email.forEach(function(email) { %>
              <div id="popup" class="alert alert-danger mt-3 popup" role="alert">
                <%= email %>
              </div>
          <% });} %>
          <% if (resultado.password) { %>
            <% resultado.password.forEach(function(passwd) { %>
              <div id="popup" class="alert alert-danger mt-3 popup" role="alert">
                <%= passwd %>
              </div>
          <% });} %>
</main>

<%- include('partials/footer') %>

<script src="/js/bootstrap.bundle.js"></script>
<script src="/js/login.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acessar conta</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="icon" type="image/png" href="/img/icon.png">
    <style>
      @media (max-width: 991.98px) {
      .largura { width: 100%;}
      }
      @media (min-width: 992px) {
      .larguradesktop{ width: 40%; }
      }
      html,body{
        height: 100%;
      }
    </style>
</head>
<body style="background-image: url(/img/dot.webp);" class="d-flex flex-column min-vh-100 text-light">
<%- include('../partials/nav-logged') %>

<main class="container flex-grow-1 my-4">
    <div class="container">
      <div id="objetoContainer" class="row justify-content-center">  
        <div class="col-md-6 mb-4 produto">
            <div class="card animar-criacao text-center">
              <div class="card-body p-4">
                <h4 class="card-title mb-4 text-primary">Dados do perfil</h4>
                
                <div class="mb-3">
                  <p class="card-text text-muted mb-1">Nome</p>
                  <h5 class="text-dark"><strong><%= refreshUser.name %></strong></h5>
                </div>
          
                <div class="mb-3">
                  <p class="card-text text-muted mb-1">Email</p>
                  <h5 class="text-dark"><strong><%= refreshUser.email %></strong></h5>
                </div>
          
                <div class="mb-3">
                  <p class="card-text text-muted mb-1">Data criada</p>
                  <h5 class="text-dark"><strong><%= refreshUser.createDate %></strong></h5>
                </div>
          
                <% if(estoques) { %>
                <div class="mt-4">
                  <p class="card-text text-muted">Estoques ativos</p>
                  <ul class="list-group list-group-flush">
                    <% estoques.forEach(function(nome) { %>
                    <li class="list-group-item border-0 px-0 py-1">
                      <h6 class="text-dark"><strong><%= nome.titulo %></strong></h6>
                    </li>
                    <% }) %>
                  </ul>
                </div>
                <% } %>
          
              </div>
            </div>
        </div>
        <div class="col-md-6 mb-4 produto">
            <div class="card animar-criacao text-center">
              <div class="card-body">
              <h4 class="card-title"> Editar o perfil</h4>
              
              <form action="/api/user" method="post" class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Nome</span>
                  <input type="text" name="name" class="form-control" placeholder="Digite o nome" required>
                  <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
              </form>
          
              <form action="/api/user" method="post" class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Email</span>
                  <input type="email" name="email" class="form-control" placeholder="Digite o email" required>
                  <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
              </form>
          
              <form action="/api/user" method="post">
                <div class="input-group">
                  <span class="input-group-text">Senha</span>
                  <input type="password" name="password" class="form-control" placeholder="Digite a senha" required>
                  <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
              </form>
              
              </div>
            </div>
        </div>
      </div>
    </div>
</main>

<%- include('../partials/footer') %>

<script src="/js/bootstrap.bundle.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeto NodeJs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"></head>
<body class="bg-gray-100"></body>
    <header class="bg-primary text-white p-4">
        <div class="container">
            <h1 class="h2 fw-bold">Site do André</h1>
            <p class="small">Bem-vindo ao meu formulário legal</p>
        </div>
    </header>

    <main>
        <section class="mt-5">
            <div class="container mt-5">
                <h2>Cadastro</h2>
                <form id="userForm" class="row">
                    <!-- Campo Nome -->
                    <div class="col-md-6 mb-3">
                        <label for="nome" class="form-label">Nome completo</label>
                        <input type="text" class="form-control" name="name" id="name" required placeholder="Digite seu nome">
                    </div>
                    <!-- Campo Username -->
                    <div class="col-md-6 mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" id="username" required placeholder="Digite seu username">
                    </div>
                    <!-- Campo Email -->
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" name="email" id="email" required  placeholder="Digite seu e-mail">
                    </div>
                    <!-- Campo Senha -->
                    <div class="col-md-6 mb-3">
                        <label for="password" class="form-label">Senha</label>
                        <input type="password" class="form-control" name="password" id="password" required placeholder="Digite sua senha">
                    </div>
                    <!-- Botão Enviar -->
                    <div class="col-md-6 mb-3">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
                <div id="alert" class="alert d-none mt-3" role="alert"></div>
            </div>
        </section>
        <section class="container mt-5">
            <table class="table table-bordered table-striped mt-3">
                <h2>Usuários cadastrados</h2>
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Senha</th>
                        <th>Criado</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.password %></td>
                            <td><%= user.createDate %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </main>

    <footer class="bg-primary text-white py-4 mt-5">
        <div class="container text-center">
            <p class="small">&copy; 2024 Meu Site. Todos os direitos reservados.</p>
        </div>
    </footer>
    
    <script>
        document.getElementById('userForm').addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries()); // Converte FormData para um objeto

            const alertElement = document.getElementById('alert');
            alertElement.classList.remove('d-none');
            try {
                const response = await fetch('/save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data) // Envia os dados como JSON
                });
                //Alerta em baixo do formulario
                
                if (!response.ok) {
                    const errorData = await response.json();
                    alertElement.classList.add('alert-danger');
                    alertElement.classList.remove('alert-success');
                    if (errorData.message === 'Já existe') {
                        alertElement.textContent = 'Já existe alguém com esse username e/ou email.';
                    } else if (errorData.message === 'Caracteres especiais') {
                        alertElement.textContent = 'Não é possivel escrever com caracteres especiais.';
                    } else {
                        alertElement.textContent = 'Ocorreu um erro ao criar a conta. Tente novamente.';
                    }
                    
                }else{
                    alertElement.classList.add('alert-success');
                    alertElement.classList.remove('alert-danger');
                    alertElement.textContent = 'Conta criada com sucesso!';
                }

            } catch (error) {
                alertElement.textContent = 'Algo deu errado. Tente novamente.';
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>